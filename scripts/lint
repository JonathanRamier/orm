#!/bin/sh -e

PACKAGE="orm"

PREFIX=""
if [ -d 'venv' ] ; then
    PREFIX="venv/bin/"
fi

set -x

${PREFIX}autoflake --in-place --recursive ${PACKAGE} tests
${PREFIX}black ${PACKAGE} tests
${PREFIX}isort --multi-line=3 --trailing-comma --force-grid-wrap=0 --combine-as --line-width 88 ${PACKAGE} tests
